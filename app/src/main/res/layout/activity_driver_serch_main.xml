<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/greyBack"
        tools:context=".DriverSerchMain">


    <Button
        android:id="@+id/driver_settings_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Настройки"
        android:stateListAnimator="@null"
        android:background="@drawable/login_shape_1"
        android:textColor="@color/white"
        android:layout_alignParentStart="true"/>
    <!--        android:backgroundTint="@color/design_default_color_primary_dark"-->
    <Button
        android:id="@+id/driver_logout_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:stateListAnimator="@null"
        android:layout_alignParentEnd="true"
        android:background="@drawable/login_shape_2"
        android:textColor="@color/white"

        android:text="Выйти" />


        <RelativeLayout
            style="@style/parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:orientation="vertical"
                android:layout_marginTop="40dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/dash_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="24dp"
                        android:textAlignment="center"
                        android:text="Выши рейсы" />

                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>

        <ScrollView
            android:layout_marginTop="170dp"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout

                android:id="@+id/info_block"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/info_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:padding="1dp"/>

                <LinearLayout
                    android:id="@+id/info_container"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

