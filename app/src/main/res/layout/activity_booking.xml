<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookingActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/car_color_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Car color:" />

        <TextView
            android:id="@+id/time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time:" />

        <TextView
            android:id="@+id/date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date:" />

        <TextView
            android:id="@+id/sit_number_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sit number:" />

        <TextView
            android:id="@+id/sit_number_booking_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sit number booking:" />

        <TextView
            android:id="@+id/where_from_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Where from:" />

        <TextView
            android:id="@+id/where_to_go_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Where to go:" />


        <TextView
            android:id="@+id/name_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name_user:" />

        <TextView
            android:id="@+id/phone_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="phone_user:" />

        <Button
            android:id="@+id/book_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>