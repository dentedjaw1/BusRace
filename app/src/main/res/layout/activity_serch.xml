<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyBack"
    tools:context=".SerchActivity">

    <Button
        android:id="@+id/customer_settings_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Настройки"
        android:stateListAnimator="@null"
        android:background="@drawable/login_shape_1"
        android:textColor="@color/white"
        android:layout_alignParentStart="true"/>
    <!--        android:backgroundTint="@color/design_default_color_primary_dark"-->

    <Button
        android:id="@+id/customer_logout_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/login_shape_2"
        android:stateListAnimator="@null"
        android:text="Выйти"

        android:textColor="@color/white" />

    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <Spinner
            android:id="@+id/spinner_Race"
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:textColor="@color/black"
            />

        <Spinner
            android:id="@+id/spinner_Child"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="60dp"/>


        <Spinner
            android:id="@+id/spinner_Third"
            android:layout_width="match_parent"
            android:textColor="@color/black"

            android:layout_height="60dp"/>

    </LinearLayout>

    <ScrollView
        android:layout_marginTop="260dp"
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout

            android:id="@+id/info_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/info_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="16dp"/>

            <LinearLayout
                android:id="@+id/info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/customer_races_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Мои рейсы"
        android:stateListAnimator="@null"
        android:background="@drawable/login_shape_3"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>